@page
@model LoginModel

@{
    ViewData["Title"] = "Авторизация";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="card">
        <section>
            <form id="account" method="post">
                <h2>Используйте данные от вашего аккаунта чтобы войти</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="card-body">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Логин</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="card-body">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="пароль" />
                    <label asp-for="Input.Password" class="form-label">Пароль</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="brn btn-primary">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Войти в аккаунт</button>
                </div>
                
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
