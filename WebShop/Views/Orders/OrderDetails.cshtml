@model WebShop.Models.Order

@{
    ViewData["Title"] = "Детали заказа";
}

<h1>Детали заказа - @Model.OrderID</h1>

<p>Дата: @Model.OrderDate</p>
<p>Статус: @Model.Status</p>
<p>Общее количество: @Model.TotalAmount</p>

<h2>Содержимое заказа</h2>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Количество</th>
            <th>Цена</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>
                    @item.Product.ProductName
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                    @item.Price
                </td>
            </tr>
        }
    </tbody>
</table>
